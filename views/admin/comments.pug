extends layout

block content
  .row
    .col
      .card.shadow
        .card-header.border-0
          h3.mb-0 Comments
        .table-responsive.text-center
          table.table.align-items-center.table-flush
            thead.thead-light
              tr
                th(scope='col') Name
                th(scope='col') Email
                th(scope='col') Comment
                th(scope='col') Status
            tbody
              each comment in comments
                tr
                  th(scope='row')
                    .media.align-items-center
                      .media-body
                        a(href='/admin/comments/' + comment.id)
                          span.mb-0.text-sm= comment.name
                  th(scope='row')
                      .media.align-items-center
                        .media-body
                          a(href='/admin/comments/' + comment.id)
                            span.mb-0.text-sm= comment.email
                  th(scope='row')
                    .media.align-items-center
                      .media-body
                        a(href='/admin/comments/' + comment.id)
                          span.mb-0.text-sm= comment.comment.substr(0,50)
                  td
                    span.badge.badge-dot.mr-4
                      if comment.reply
                        i.bg-success
                        |  replied
                      else
                        i.bg-warning
                        |  not replied
  br
  ul.pagination.justify-content-end
        if previous
          li.page-item
            a.page-link(href='/admin/comments?page=' + previous tabindex='-1') <
        else if previous === 0
          li.page-item
              a.page-link(href='/admin/comments?page=0' tabindex='-1') <
        else
          li.page-item.disabled
            a.page-link(href='/admin/comments' tabindex='-1') <
        if next
          li.page-item
            a.page-link(href='/admin/comments?page=' + next tabindex='-1') >
        else
          li.page-item.disabled
            a.page-link(href='/admin/comments' tabindex='-1') >            
    


    


