doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title My Pretty Blog
    // mobile responsive meta
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    // ** /Plugins Needed for the Project **
    // Bootstrap
    link(rel='stylesheet', href='/plugins/bootstrap/bootstrap.min.css')
    // slick slider
    link(rel='stylesheet', href='/plugins/slick/slick.css')
    // themefy-icon
    link(rel='stylesheet', href='/plugins/themify-icons/themify-icons.css')
    // Main Stylesheet
    link(href='/stylesheets/parsa-style.css', rel='stylesheet')
    // Favicon
    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
  body
    // preloader
    .preloader
      .loader
        span.dot
        .dots
          span
          span
          span
    // /preloader
    header.navigation
      nav.navbar.navbar-expand-lg.navbar-light
        a.navbar-brand(href='/')
          img.img-fluid(src='/images/logo.png', alt='parsa')
        button.navbar-toggler.border-0(type='button', data-toggle='collapse', data-target='#navogation', aria-controls='navogation', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navogation.collapse.navbar-collapse.text-center
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.text-dark(href='/') Anasayfa
            li.nav-item
              a.nav-link.text-dark(href='/about') Hakkımda
            //li.nav-item
              a.nav-link.text-uppercase.text-dark(href='/blog') Blog
            li.nav-item
              a.nav-link.text-dark(href='/contact') İletişim
          form.form-inline.position-relative.ml-lg-4
            input.form-control.px-0.w-100(type='search', placeholder='Search')
            // <button class="search-icon" type="submit"><i class="ti-search text-dark"></i></button>
            a.search-icon(href='/search')
              i.ti-search.text-dark
    block content

    // instagram
