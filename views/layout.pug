    // /instagram
    footer.bg-secondary
      .section
        .container
          .row
            .col-md-3.col-sm-6.mb-4.mb-md-0
              a(href='/')
                img.img-fluid(src='/images/logo.png', alt='persa')
            .col-md-3.col-sm-6.mb-4.mb-md-0
              h6 Address
              ul.list-unstyled
                li.font-secondary.text-dark Sydney
                li.font-secondary.text-dark 6 rip carl Avenue CA 90733
            .col-md-3.col-sm-6.mb-4.mb-md-0
              h6 Contact Info
              ul.list-unstyled
                li.font-secondary.text-dark Tel: +90 000 333 22
                li.font-secondary.text-dark Mail: exmaple@ymail.com
            .col-md-3.col-sm-6.mb-4.mb-md-0
              h6 Follow
              ul.list-inline.d-inline-block
                li.list-inline-item
                  a.text-dark(href='#')
                    i.ti-facebook
                li.list-inline-item
                  a.text-dark(href='#')
                    i.ti-twitter-alt
                li.list-inline-item
                  a.text-dark(href='#')
                    i.ti-linkedin
                li.list-inline-item
                  a.text-dark(href='#')
                    i.ti-github
      .text-center.pb-3
        p.mb-0
          | Copyright ©
          script.
            var CurrentYear = new Date().getFullYear()
            document.write(CurrentYear)
          |  a theme by  
          a(href='https://themefisher.com/') themefisher.com
    // jQuery
    script(src='/plugins/jQuery/jquery.min.js')
    // Bootstrap JS
    script(src='/plugins/bootstrap/bootstrap.min.js')
